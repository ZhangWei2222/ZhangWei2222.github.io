.site-brand-wrapper {
  position: relative;
}

.site-meta {
  background: #c0d0e8;
  color: white;
  padding: 50px 0;

  +tablet-mobile() {
    box-shadow: 0 0 16px rgba(0, 0, 0, .5);
  }
}

.brand {
  background: none;
  padding: 0;

  &:hover {
    color: white;
  }
}

.site-subtitle {
  font-weight: initial;
  margin: 10px 10px 0;
}

.custom-logo-image {
  margin-top: 20px;

  +tablet-mobile() {
    display: none;
  }
}
